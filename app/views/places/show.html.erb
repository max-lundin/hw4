<div class="container mt-5">
  <h1 class="mb-4"><%= @place["name"] %></h1>

  <% if session[:user_id] %>
    <div class="container mt-4">
      <div class="row">
          <div class="col-auto mb-3">
            <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary btn-lg">New Post</a>
          </div>
      </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% for entry in @entries %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= entry["title"] %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= entry["occurred_on"] %></h6>
              <% if entry.uploaded_image.attached? %>
                <%= image_tag entry.uploaded_image, class: "card-img-top img-fluid mb-3" %>
              <% end %>
              <p class="card-text"><%= entry["description"] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="mt-3">Please log in to see your posts.</p>
    <%= link_to 'Login', "/login", class: "btn btn-link login-link" %>
  <% end %>
</div>