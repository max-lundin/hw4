<% if session[:user_id] %>

<h1>New Place</h1>

<form action="/places" method="post">
  <div class="mb-3">
    <label for="name_input" class="form-label">Name</label>
    <input type="text" class="form-control" name="name" id="name_input">
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
<% else %>
  <p>Please log in to create a new place.</p>
  <%= link_to 'Login', "/login", class: "btn btn-link" %>
<% end %>

</form>